{
    "info": {
        "name": "Raahein Admin Module",
        "description": "Complete Admin API collection for Raahein Backend (Admin Module Part 1, 2, 3)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "User Management",
            "item": [
                {
                    "name": "List All Users",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/admin/users",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "users"
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/admin/users/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "users",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Update User Status (Ban/Suspend)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"BANNED\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/users/1/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "users",
                                "1",
                                "status"
                            ]
                        }
                    }
                }
            ]
        },
